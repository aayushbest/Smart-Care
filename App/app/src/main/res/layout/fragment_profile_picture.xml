<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_marginTop="2dp"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="30dp"
    android:background="@drawable/background_random"
    android:layout_height="200dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/add_profile_pic_text"
        android:textSize="20sp"
        android:id="@+id/profile_picture_label"
        android:textColor="@android:color/holo_red_dark"
        android:textAlignment="center"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/profile_picture_label"
        android:layout_centerHorizontal="true"
        android:id="@+id/modify_profile_pic"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_person_blue_24dp"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/modify_profile_pic"
        android:layout_marginTop="10dp"
        android:id="@+id/profile_uploadButton"
        android:text="@string/text_button_upload"
        android:onClick="uploadPicture"
        android:textStyle="bold"
        android:shadowColor="@color/secondary"
        android:background="@android:color/holo_blue_light" />
</RelativeLayout>